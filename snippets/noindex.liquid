<!-- Redirect pages containing 'andytown-blog' in the URL back to the homepage -->
<script>
  //https://andytownsf.com/andytown-blog/202/5/26/building-partnerships-a-reflection-on-our-trip-to-mayan-harvest-in-bella-vista-mexico
  $(document).ready(function(){
  var currentUrl = window.location.href;
  if (currentUrl.includes('andytown-blog')) {
    window.location.href = '/';
  }
});

</script>

