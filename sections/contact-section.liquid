<div class="contact-section ">
  <div class="container-1260  flex">
    <div class="contact-info-section">
      {% if section.settings.sidebartitle != blank %}
        <h2 class="h4">{{ section.settings.sidebartitle }}</h2>
      {% endif %}
      {% if section.settings.sidebardescription != blank %}
        <p class="medium">{{ section.settings.sidebardescription }}</p>
      {% endif %}
      <ul>
        <li>
          <div class="icon">{% include 'icon-phone-contact' %}</div>
          <a href="tel:+{{ settings.textnumber }}">{{ settings.textnumber }}+(123) 456-7890</a>
        </li>
        <li>
          <div class="icon">{% include 'icon-email-contact' %}</div>
          <a href="{{ settings.email }}"> {{ settings.email }}</a>
        </li>
        <li>
          <div class="icon">{% include 'icon-address-contact' %}</div>
          <a href="{{ settings.addresslink }}">
            <p>{{ settings.emailAddress }}</p>
          </a>
        </li>
      </ul>
    </div>
    <div class="form-section text-left">
      <h2 class="medium ">Get in touch</h2>
      {%- assign formId = 'ContactForm' -%}
      {% form 'contact', id: formId %}
        {% include 'form-status', form: form, form_id: formId %}
        <div class="half-and-half">
          <div class="half">
            <label>How can we help you? *</label>
            <input
              type="text"
              id="{{ formId }}-subject"
              placeholder="Subject*"
              name="contact[Enquiry_Subject]"
            >
          </div>
          <div class="half">
            <label>Full Name *</label>
            <input
              placeholder="Name*"
              type="text"
              id="{{ formId }}-name"
              name="contact[{{ 'contact.form.name' | t }}]"
              value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
            >
          </div>
        </div>
        <div class="half-and-half">
          <div class="half">
            <label>Email Address *</label>
            <input
              placeholder="Email Address*"
              class="email-field"
              type="email"
              id="{{ formId }}-email"
              name="contact[email]"
              autocorrect="off"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {%- if form.errors contains 'email' -%}
                class="input--error"
                aria-invalid="true"
                aria-describedby="{{ formId }}-email-error"
              {%- endif -%}
            >
            {%- if form.errors contains 'email' -%}
              <span id="{{ formId}}-email-error" class="input-error-message">
                <span class="visually-hidden">{{ 'general.accessibility.error' | t }}</span>
                <span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}.</span
                >
              </span>
            {%- endif -%}
          </div>

          <div class="half">
            <label>Mobile Number *</label>
            <input
              type="tel"
              id="{{ formId }}-phone"
              placeholder="Phone Number"
              name="contact[Phone]"
              pattern="[0-9\-]*"
              value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            >
          </div>
        </div>
        <label>Message</label>
        <textarea
          placeholder="Message"
          rows="10"
          id="{{ formId }}-message"
          name="contact[{{ 'contact.form.message' | t }}]"
        >
          {% if form.body %}
            {{ form.body }}{% endif %}
        </textarea>
        <button
          type="submit"
          class="btn--primary"
        >
          Submit
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Section",
  "settings": [
    {
      "type": "text",
      "id": "sidebartitle",
      "label": "Sidebar Title"
    },
    {
      "type": "richtext",
      "id": "sidebardescription",
      "label": "Sidebar Description"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Form Title"
    }
  ],

  "presets": [
    {
      "name": "Contact Section"
    }
  ]
}
{% endschema %}
