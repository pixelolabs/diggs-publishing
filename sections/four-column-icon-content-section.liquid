<div class="four-column-icon-content-section">
  <div class="container-1260">
    <div class="top-header">
      <h2>Why Dive into Our Children's Book Mentoring Service?</h2>
    </div>

    <ul class="icon-content-block">
      <li class="icon-card">
        <div class="image-section"></div>
        <h3></h3>
        <div class="description"></div>
      </li>
    </ul>
  </div>
</div>
{% schema %}
{
  "name": "Three Column Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "Extra Settings"
    },

    {
      "type": "header",
      "content": "Top/Bottom Section Space"
    },
    {
      "type": "range",
      "id": "paddingtop",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingtopmobile",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingbottom",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingbottomMobile",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "cards",
      "name": "Cards",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon",
          "info": "100 x 100px Recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four Column Icons Content Section"
    }
  ]
}
{% endschema %}
