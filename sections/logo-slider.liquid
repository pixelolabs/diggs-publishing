{% if section.blocks.size > 0 %}
  <div class="logo-slider ">
    <div class="container-1260">
      {% if section.settings.title != blank %}
        <h2>
          {{ section.settings.title }}
        </h2>
      {% endif %}
    <div class="slider js_logo-slider ">
      <div class="swiper-wrapper flex">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% if block.settings.image != blank %}
              <a
                href="{{ block.settings.link }}"
                title="Read More About {{ block.settings.title }}"
                aria-label="Read More About {{ block.settings.title }}"
                class="image-section">
                <img
                  class="lazyload"
                  data-src="{{ block.settings.image | img_url: 'master' }}"
                  alt="{{block.settings.title}}">
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
</div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Logo Slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "210 x 60px Recommended"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Icon Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Logo Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Slider"
      }
    ]
  }
{% endschema %}