<div class="form-section not-logged-tempate create-account">
  <div class="inner-login-hero">
    <div class="container-1260">
      <div class="content">
        <h1 class="text-center">{{ 'customer.register.title' | t }}</h1>
      </div>
    </div>
    <div class="image-section">
      <img src="{{ 'dummy-collection.webp' | asset_url }}">
    </div>
  </div>
  <div class="form-outer">
    <div class="box">
      {% comment %} <div class="cloud-bg"></div> {% endcomment %}
      {% form 'reset_customer_password' %}
        <!-- <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p> -->
        {{ form.errors | default_errors }}
        <label>{{ 'customer.reset_password.password' | t }}</label>
        <input
          
          type="password"
          value=""
          name="customer[password]"
          id="ResetPassword"
          {% if form.errors contains 'password' %}
            class="error"
          {% endif %}
        >
          <label>{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input
          
          type="password"
          value=""
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          {% if form.errors contains 'password_confirmation' %}
            class="error"
          {% endif %}
        >
        <div class="text-center btn-wrapper reset-password">
          <button type="submit" class="btn--primary">{{ 'customer.reset_password.submit' | t }}</button>
          <!-- <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p> -->
          <!-- <input type="submit" class="btn-green" value="{{ 'customer.reset_password.submit' | t }}"> -->
        </div>
      {% endform %}
    </div>
  </div>
</div>




{% schema %}
{
  "name": {
    "en": "Reset Password"
  },
  "presets": [
    {
      "name": "Reset Password"
    }
  ]
}
{% endschema %}
