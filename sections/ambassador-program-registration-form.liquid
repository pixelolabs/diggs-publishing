<div class="ambassador-program-form-outer">
  <div class="ambassador-program-form relative">
    <div class="container-1260 flex">
      <div class="form-section text-left">
        {%- assign formId = 'AmbassadorProgramForm' -%}
        {% form 'contact'
          , id: formId %}
          {% include 'form-status'
            , form: form
            , form_id: formId %}
          <div class="flex">
            <div class="input-field half-width-col">
              <label for="FirstName">Parents First Name</label>
              <input
                type="text"
                id="{{ formId }}-subject"
                placeholder="Parents First Name"
                name="contact[Enquiry_Subject]">
            </div>
            <div class="input-field half-width-col">
              <label for="Full-name">
              Full Name *</label>
              <input
                placeholder="How can we help you? *"
                type="text"
                id="{{ formId }}-name"
                name="contact[{{ 'contact.form.name' | t }}]"
                aria-required="true"
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
            </div>
            <div class="input-field half-width-col">
              <label for="Email">
              Email Address *</label>
              <input
                placeholder="Email Address*"
                class="email-field"
                type="email"
                id="{{ formId }}-email"
                name="contact[email]"
                autocorrect="off"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {%- if form.errors contains 'email' -%}
                class="input--error"
                aria-invalid="true"
                aria-describedby="{{ formId }}-email-error"
                {%- endif -%}>
              {%- if form.errors contains 'email' -%}
                <span id="{{ formId}}-email-error" class="input-error-message">
                  <span class="visually-hidden">{{ 'general.accessibility.error' | t }}</span>
                  <span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email }}.</span>
                </span>
              {%- endif -%}
            </div>
            <div class="input-field half-width-col">
              <label for="Mobile-number">
              Mobile Number *</label>
              <input
                type="tel"
                id="{{ formId }}-phone"
                placeholder="Phone Number"
                name="contact[Phone]"
                pattern="[0-9\-]*"
                aria-required="true"
                value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
            </div>
            <div class="textarea-field full-width-col">
              <label for="Message">
              Message</label>
              <textarea
                placeholder="Message"
                rows="10"
                id="{{ formId }}-message"
                name="contact[{{ 'contact.form.message' | t }}]">
                {% if form.body %}
                  {{ form.body }}{% endif %}
              </textarea>
            </div>
            <div class="submit-field full-width-col">
            <input
              type="submit"
              class="btn--primary"
              value="Submit Now">
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Ambassador Program Form",
  "presets": [
    {
      "name": "Ambassador Program Form"
    }
  ]
}
{% endschema %}
