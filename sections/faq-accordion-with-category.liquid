<div class="faq-section-with-category">
  <div class="container-944 flex">
    <div class="js__faq-category-side-panel">
      <ul class="text-center faq-category-sidepanel ipad-none">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'list' -%}
              <li>
                <a
                  title="{{block.settings.heading}}"
                  href="
                    #{{block.settings.heading | remove: ',' | remove: '-' | remove: ' ' | remove: '&' | remove: "'" | remove: '
                    (' | remove: ')' }}
                  "
                >
                  {{- block.settings.heading -}}
                </a>
              </li>
          {%- endcase -%}
        {%- endfor -%}
      </ul>
      <div class="dropdown ipad-block">
        <p class="js__dropdown_result selected capitalize">Select Category</p>
        <ul class="js__dropdown">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'list' -%}
                <li>
                  <a
                    title="{{block.settings.heading}}"
                    href="
                      #{{block.settings.heading | remove: ',' | remove: '-' | remove: ' ' | remove: '&' | remove: "'" | remove: '
                      (' | remove: ')' }}
                    "
                  >
                    {{- block.settings.heading -}}
                  </a>
                </li>
            {%- endcase -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
    <ul
      class="accordian js__accordian"
    >
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'list' -%}
            <li
              class="heading"
            >
              <h3
                class="h4"
                id="{{ block.settings.heading }}"
              >
                {{ block.settings.heading }}
              </h3>
            </li>

          {%- when 'question' -%}
            <li>
              {% if block.settings.title != blank %}
                {% include 'icon-minus' %}
                {% include 'icon-plus' %}
                <h4
                  class="h5"
                >
                  {{ block.settings.title }}
                </h4>
              {%- endif -%}

              <div
                class="content full-format"
              >
                <p>{{ block.settings.faqAnswer }}</p>
              </div>
            </li>
        {%- endcase -%}
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "FAQ's Accordion Category",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "linkText",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "textLink",
      "label": "Text Link"
    }
  ],

  "blocks": [
    {
      "type": "list",
      "name": "Section separator",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "faqAnswer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ's Accordion with Category"
    }
  ]
}
{% endschema %}
