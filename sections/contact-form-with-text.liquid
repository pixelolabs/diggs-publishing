<div class="contact-form-with-text-outer">
  <div class="contact-form-with-text">
    <div class="container-1260 flex">
      <div class="form-section text-left">
        {%- assign formId = 'ContactForm' -%}
        {% form 'contact'
          , id: formId %}
          {% include 'form-status'
            , form: form
            , form_id: formId %}
          <div class="flex">
            <div class="input-field half-width-col {% if form.errors %}input-group--error{% endif %}">
              <label for="Subject">
                How can we help you? *</label>
              <input
                type="text"
                id="{{ formId }}-subject"
                placeholder="Subject*"
                aria-required="true"
                name="contact[Enquiry_Subject]">
            </div>
            <div class="input-field half-width-col {% if form.errors %}input-group--error{% endif %}">
              <label for="Full-name">
              Full Name *</label>
              <input
                placeholder="How can we help you? *"
                type="text"
                id="{{ formId }}-name"
                name="contact[{{ 'contact.form.name' | t }}]"
                aria-required="true"
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
            </div>
            <div class="input-field half-width-col {% if form.errors %}input-group--error{% endif %}">
              <label for="Email">
              Email Address *</label>
              <input
                placeholder="Email Address*"
                class="email-field"
                type="email"
                id="{{ formId }}-email"
                name="contact[email]"
                autocorrect="off"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {%- if form.errors contains 'email' -%}
                class="input--error"
                aria-invalid="true"
                aria-describedby="{{ formId }}-email-error"
                {%- endif -%}>
              {%- if form.errors contains 'email' -%}
                <span id="{{ formId}}-email-error" class="input-error-message">
                  <span class="visually-hidden">{{ 'general.accessibility.error' | t }}</span>
                  <span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email }}.</span>
                </span>
              {%- endif -%}
            </div>
            <div class="input-field half-width-col {% if form.errors %}input-group--error{% endif %}">
              <label for="Mobile-number">
              Mobile Number *</label>
              <input
                type="tel"
                id="{{ formId }}-phone"
                placeholder="Phone Number"
                name="contact[Phone]"
                pattern="[0-9\-]*"
                aria-required="true"
                value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
            </div>
            <div class="textarea-field full-width-col">
              <label for="Message">
              Message</label>
              <textarea
                placeholder="Message"
                rows="10"
                id="{{ formId }}-message"
                name="contact[{{ 'contact.form.message' | t }}]">
                {% if form.body %}
                  {{ form.body }}{% endif %}
              </textarea>
            </div>
            <div class="submit-field full-width-col">
            <input
              type="submit"
              class="btn--primary"
              value="Submit Now">
            </div>
          </div>
        {% endform %}
      </div>
      <div class="contact-info-section">
        {% if section.settings.title != blank %}
          <h2>{{ section.settings.title }}</h2>
        {% endif %}
        <ul>
          <li>
            <div class="title uppercase">Location:</div>
            <div class="address">{{ section.settings.address }}</div>
          </li>
          <li>
            <div class="title uppercase">Email us on:</div>
            <div><a href="mailto:{{settings.emailAddress}}">{{ settings.emailAddress }}</a></div>
          </li>
        </ul>
      </div>
      <div class="kids-images">
          <img src="{{ 'kids-image-2.webp' | asset_url }}" /> 
      </div>
    </div>
  </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {

  document.getElementById('ContactForm').addEventListener('submit', function(event) {
      event.preventDefault();

      resetErrorMessages();

      let formIsValid = true;
      const inputFields = document.querySelectorAll('input[aria-required="true"]');
      
      inputFields.forEach(input => {
          const value = input.value.trim();
          if (value === '') {
              const errorMessage = document.createElement('span');
              errorMessage.textContent = 'This field is required.';
              errorMessage.classList.add('input-error-message');
              input.parentNode.appendChild(errorMessage);
              formIsValid = false;
          }
      });

      if (formIsValid) {
          event.target.submit();
      }
  });

  function resetErrorMessages() {
      const errorMessages = document.querySelectorAll('.error-message');
      errorMessages.forEach(errorMessage => {
          errorMessage.parentNode.removeChild(errorMessage);
      });
  }
});
</script>
{% schema %}
  {
    "name": "Contact Form With Text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "address",
        "label": "Add Location"
      }
    ],

    "presets": [
      {
        "name": "Contact Form With Text"
      }
    ]
  }
{% endschema %}